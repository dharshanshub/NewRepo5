@model IEnumerable<Medicure_Entity.Appointment_Log>

@{
    ViewData["Title"] = "ViewAppointments";
    Layout = "_Layout2";
}
<div class="ind">
<h1 style = "color:cornflowerblue ;font-weight:bold;">ViewAppointments</h1>


<table class="table h4">
    <thead>
        <tr class="bg-primary">
            <th style="color:whitesmoke">
                @Html.DisplayNameFor(model => model.Appointment_ID)
            </th>
            <th style="color:whitesmoke">
                @Html.DisplayNameFor(model => model.Patient_Id)
            </th>

            <th style="color:whitesmoke">
                @Html.DisplayNameFor(model => model.illness)
            </th>
            <th style="color:whitesmoke">
                @Html.DisplayNameFor(model => model.Date_of_visit)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="table-primary">
            <td>
                @Html.DisplayFor(modelItem => item.Appointment_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patient_Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.illness)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date_of_visit)
            </td>
            <td>
               <a class="btn btn-lg btn-primary" asp-controller="Physician" asp-action="AddPrescription" asp-route-id=@item.Appointment_ID> Add Prescription </a>
            </td>
            <td>
               <a class="btn btn-lg btn-primary" asp-controller="Physician" asp-action="GetPatientDetailsByID" asp-route-id=@item.Patient_Id > View Details </a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>

<div>
    <a class="btn btn-lg btn-primary" asp-controller="Patient" asp-action="Index" asp-route-id="@ViewBag.Id">Back</a>

</div>