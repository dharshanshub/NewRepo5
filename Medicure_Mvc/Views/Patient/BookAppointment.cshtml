@model Medicure_Entity.Appointment_Log
@ViewData["id"]
@{
    ViewData["Title"] = "BookAppointment";
}

@{
    int rapp;
    Random r =new Random();
    rapp = r.Next(); 
}
<h1>BookAppointment</h1>

<h4>Appointment_Log</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="BookAppointment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Appointment_ID" class="control-label"></label>
                <input asp-for="Appointment_ID" class="form-control " readonly value="@rapp" />
                <span asp-validation-for="Appointment_ID" class="text-danger" ></span>
            </div>
            <div class="form-group">
                <input asp-for="Patient_Id" class="form-control" value=@ViewBag.Id hidden/>
                <span asp-validation-for="Patient_Id" class="text-danger" hidden ></span>
            </div>
            <div class="form-group">
                <label asp-for="Physician_Id" class="control-label"></label>
                <select  asp-for="Physician_Id" class="form-select">
                   <option >select Physician</option>
                    @foreach (var item in ViewBag.ddl)
                    {
                        var s = item.ToString().Split('-');
                        <option value="@s[0]">@s[1]</option>
                    }
                </select>
                <span asp-validation-for="Physician_Id" class="text-danger"></span>
               @* <input asp-for="Physician_Id" class="form-control" />
                <span asp-validation-for="Physician_Id" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="illness" class="control-label"></label>
                <input asp-for="illness" class="form-control" />
                <span asp-validation-for="illness" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date_of_visit" class="control-label"></label>
                <input asp-for="Date_of_visit" class="form-control" />
                <span asp-validation-for="Date_of_visit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Book" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

    <a class="btn btn-outline-light" asp-controller="Patient" asp-action="Index" asp-route-id="@ViewBag.Id">Back</a>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
