@model IEnumerable<Medicure_Entity.Appointment_Log>

@{
    ViewData["Title"] = "ViewAppointmentHistorys";
    Layout = "_Layout2";
}
<div class="tab">

<h1 style = "color:cornflowerblue ;font-weight:bold;"> Appointment History</h1>


<table class="table h4">
    <thead >
        <tr  class="bg-primary">
            <th style="color:whitesmoke" >
                @Html.DisplayNameFor(model => model.Appointment_ID)
            </th>
            <th style="color:whitesmoke">
                @Html.DisplayNameFor(model => model.Patient_Id)
            </th>
            <th style="color:whitesmoke">
                @Html.DisplayNameFor(model => model.Physician_Id)
            </th>
            <th style="color:whitesmoke">
                @Html.DisplayNameFor(model => model.illness)
            </th style="color:whitesmoke">
            <th style="color:whitesmoke">
                @Html.DisplayNameFor(model => model.Date_of_visit)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="table-primary">
            <td >
                @Html.DisplayFor(modelItem => item.Appointment_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patient_Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Physician_Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.illness)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date_of_visit)
            </td>
            <td>
                <a class="btn btn-primary btn-sm asp-controller="Patient" asp-action="GetPhysicianDetailsByID" asp-route-id="@item.Physician_Id">Get Details</a>
            </td>

        </tr>

 }
 </tbody>
</table>
</div>

<div>
    <a class="btn btn-outline-light"  asp-controller="Patient" asp-action="Index" asp-route-id="@ViewBag.Id">Back</a>
</div>
